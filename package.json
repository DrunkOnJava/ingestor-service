{
  "name": "ingestor-system",
  "version": "1.0.0",
  "description": "Content ingestion and entity extraction system with Claude AI integration",
  "main": "dist/index.js",
  "bin": {
    "ingestor": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "mcp": "ts-node src/index.ts --mcp",
    "mcp:http": "ts-node src/index.ts --mcp --http",
    "api": "ts-node src/index.ts --api",
    "api:dev": "ts-node --transpile-only src/index.ts --api --debug",
    "api:docs": "open http://localhost:3000/api/docs",
    "cli": "node dist/cli/index.js",
    "cli:dev": "ts-node src/cli/index.ts",
    "cli:build": "tsc -p tsconfig.cli.json",
    "cli:test": "jest --testPathPattern=src/cli",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "npm run build",
    "precommit": "lint-staged",
    "docker:build": "docker build -t ingestor-system:latest .",
    "docker:run": "docker run -p 3000:3000 ingestor-system:latest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "entity-extraction",
    "content-processing",
    "claude",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.10.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^8.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "conf": "^12.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-glob": "^3.3.1",
    "figlet": "^1.6.0",
    "inquirer": "^9.2.11",
    "node-fetch": "^3.3.2",
    "ora": "^7.0.1",
    "pdf-parse": "^1.1.1",
    "sqlite": "^5.0.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.5",
    "@types/express": "^4.17.18",
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/pdf-parse": "^1.1.1",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run typecheck && npm run test"
    }
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  }
}
