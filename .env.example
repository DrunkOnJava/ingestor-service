# Ingestor System Environment Configuration

# Claude API Key - Required for AI processing
CLAUDE_API_KEY=your_claude_api_key_here

# Database Configuration
DEFAULT_DATABASE=general
DB_DIRECTORY=~/.ingestor/databases

# Logging Configuration
LOG_LEVEL=info  # debug, info, warning, error
LOG_DIRECTORY=~/.ingestor/logs

# Content Processing Configuration
MAX_FILE_SIZE=10485760  # 10MB
CHUNK_SIZE=524288  # 512KB
KEEP_TEMP_FILES=false

# Claude API Configuration
CLAUDE_MODEL=claude-3-opus-20240229
MAX_TOKENS=4096
TEMPERATURE=0.7
TIMEOUT=60
MAX_RETRIES=3

# Application Paths
TEMP_DIRECTORY=~/.ingestor/tmp
CONFIG_DIRECTORY=~/.ingestor/config